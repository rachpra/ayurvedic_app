<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="110dp"
            android:layout_height="133dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/ailaName"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Full name"
            android:textColor="#D50000"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnDelete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_remove_circle_24"/>
        <View
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@id/ailaName"
            app:layout_constraintLeft_toRightOf="@+id/imgProfile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/ailaName"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/ailaRs"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="14dp"
            android:text="Rs."
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/ailaName"
            android:layout_marginLeft="15dp" />
        <TextView
            android:id="@+id/ailaPrice"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="14dp"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ailaRs"
            app:layout_constraintTop_toBottomOf="@+id/ailaName"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/ailaMl"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Ml"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/ailaRs"
            app:layout_constraintTop_toBottomOf="@+id/ailaPrice"
            />
        <TextView
            android:id="@+id/ml"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="ml"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@+id/ailaMl"
            app:layout_constraintTop_toBottomOf="@+id/ailaPrice"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/ailaType"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/ailaMl"
            app:layout_constraintTop_toBottomOf="@+id/ailaMl"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>